<?xml version="1.0"?>
<robot name="Camera Sensor">

	<link name="outerframe">
		<pose> 0 0 0 0 0 0 </pose>
		<inertial>
		    <origin xyz="0.00 0.0 0.05" rpy="0 0 0"/>
		    <mass value="1"/>
		    <inertia
			ixx="1.0" ixy="0.0" ixz="0.0"
			iyy="1.0" iyz="0.0"
			izz="1.0"/>
	    	</inertial>
		<collision name="collisionBox">
			<geometry>
			<box size="0.1 0.04 0.1"/>
			</geometry>		
		</collision>
		<visual name="visualBox">
			<geometry>
			<box size="0.1 0.04 0.1"/>
			</geometry>		
		</visual>

		<collision name="collisionLense">
			<origin xyz="0.0 0.02 0.03" rpy="1.5707963 0 0" />
			<geometry>
				<cylinder length="0.2" radius="0.02"/>
			</geometry>		
		</collision>
		<visual name="visualLense">
			<origin xyz="0.0 0.02 0.03" rpy="1.5707963 0 0" />
			<geometry>
				<cylinder length="0.2" radius="0.02"/>	
			</geometry>			
		</visual>
			
	
	</link>
	<gazebo reference_link = "outerframe">
		<material>Gazebo/Orange</material>
		<static>true</static>
		<sensor name="Camera" type="camera">
			<origin xyz="0 0 0.03" rpy="0 0 1.57"/>
			<update_rate>50</update_rate>
			<always_on>true</always_on>
			<visualize>true</visualize>
			<camera>
				<horizontal_fov>1.047</horizontal_fov>
				<image>
					<height>786</height>
					<width>786</width>
				</image>
				<!--<save enabled=True>
					<path>"~/CameraData"</path>
				</save>-->
				<noise>
				    <type>gaussian</type>
				    <mean>0.0</mean>
				    <stddev>0.01</stddev>
				</noise>
				<clip>
				    <near>0.1</near>
				    <far>100</far>
				</clip>
				<distortion>
				   <k1>-0.25</k1>
				   <k2>0.12</k2>
				   <k3>0.0</k3>
				   <p1>-0.00028</p1>
				   <p2>-0.00005</p2>
				   <center>0.5 0.5</center>
				</distortion>
			</camera>


		</sensor>
</gazebo>
</robot>
